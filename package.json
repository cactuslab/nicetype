{
  "name": "nicetype",
  "version": "1.0.0",
  "description": "Touch up copy by transforming plain ASCII punctuation into “smart” Unicode equivalents.",
  "main": "dist/nicetype.js",
  "module": "src/index.js",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "test": "jest",
    "lint": "npx eslint src/**",
